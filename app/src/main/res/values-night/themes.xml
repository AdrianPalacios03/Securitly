        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- CUSTOM THEMES -->
    <style name="PinkTheme" parent="">
        <item name="colorOnSurface">@color/pink</item>
        <item name="colorSecondary">@color/pink</item>
